<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Loja de Informática</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" />
    <style>

        * {
            margin: 0;
            padding: 0;
            font-family: 'Poppins';
        }

        :root {
            --white: #F6F6F6;
            --back-first: #47CCFD;
        }

        body {
            min-height: 100vh;
            background-image: linear-gradient(to bottom, #282c18 0%, black 100%);
            transition: 2s;
        }

        nav {
            margin: 4% 5%;
            z-index: 6000;
            position: fixed;
            width: 80px;
            height: 85%;
            border-radius: 50px;
            background: var(--white);
            transition: 0.5s;
            text-align: center;
        }

        ul {
            list-style: none;
        }

            ul .home, .log-out {
                margin: 2.5rem auto;
            }

        li img {
            width: 2.5rem;
            margin: 0.5rem auto;
            transition: 0.5s;
        }

        a li img:hover {
            width: 3rem;
            transition: ease-in-out 0.5s;
        }

        section {
            display: flex;
        }

        .main_one {
            width: 35%;
            margin: 10% 0%;
            padding-left: 18%;
        }

            .main_one p {
                font: bold 4em Poppins;
                color: var(--white);
                height: 45vh;
                letter-spacing: 3px;
            }

        .sliders img {
            opacity: 0;
            margin: 8%;
            width: 35%;
            position: absolute;
            transition: ease 0.8s;
            transform-origin: left;
            transition-timing-function: ease;
            transition-timing-function: cubic-bezier(0.25, 0.1, 0.25, 1);
        }

            .sliders img.selected {
                opacity: 1;
            }
    </style>
    <link rel="stylesheet" href="home.css">
</head>
<body class="back">
    <nav>
        <ul>
            <a href="" title="Home"><li class="home"><img src="~/fonts/icons/home_icon.png" alt=""></li></a>
            <a href="../Funcionario/cadFuncionario" title="Cadastrar Funcionário"><li><img src="~/fonts/icons/add-func_icon.png" alt=""></li></a>
            <a href="../Funcionario/cadCliente" title="Cadastrar Cliente"><li><img src="~/fonts/icons/add-cliente_icon.png" alt=""></li></a>
            <a href="../Funcionario/cadProduto" title="Produtos"><li><img src="~/fonts/icons/cube_icon.png" alt=""></li></a>
            <a href="" title="Carrinho"><li><img src="~/fonts/icons/shopping-cart_icon.png" alt=""></li></a>
            <a href="../Login/Login" title="Sair"><li class="log-out"><img src="~/fonts/icons/log-out_icon.png" alt=""></li></a>
        </ul>
    </nav>
    <section>
        <main class="main_one">
            <p class="first">PRODUTOS DE INFORMÁTICA ESSENCIAIS PARA VOCÊ.</p>
        </main>
        <main class="main_two">
            <div class="sliders">
                <img class="selected" src="~/fonts/sliders/Keybord_slider.png">
                <img class="img_two" src="~/fonts/sliders/Mouse_slider.png">
                <img class="img_theree" src="~/fonts/sliders/Fone_slider.png">
                <img class="img_four" src="~/fonts/sliders/Notebook_slider.png">
                <img class="img_five" src="~/fonts/sliders/Memoria_slider.png">
                <img class="img_six" src="~/fonts/sliders/Mic_slider.png">
            </div>
        </main>
    </section>
</body>
<script>
    let time = 3000,
    currentImageWeb = 0,
    currentBacktWeb = 0,
    images = document.querySelectorAll(".sliders img")
    max = images.length;

    function nextImage(){
        images[currentImageWeb].classList.remove("selected")
        var back = document.querySelectorAll(".back");



        currentImageWeb++

        if(currentImageWeb >= max)
            currentImageWeb = 0

        images[currentImageWeb].classList.add("selected")

        switch(currentImageWeb){
            case 0:  document.body.style.cssText = "background-image: linear-gradient(to top, #282c18 0%, black 100%);"
            break;

            case 1: document.body.style.cssText = "background-image: linear-gradient(to bottom, #434343 0%, black 100%);"
            break;

            case 2:  document.body.style.cssText = "background-image: linear-gradient(to top, #2D3C42 0%, black 100%);"
            break;

            case 3: document.body.style.cssText = "background-image: linear-gradient(to bottom, #762830 0%, black 100%);"
            break;

            case 4: document.body.style.cssText = "background-image: linear-gradient(to bottom, #44326C 0%, black 100%);"
            break;

            case 5:  document.body.style.cssText = "background-image: linear-gradient(to bottom, #B54975 0%, black 100%);"
            break;
        }
    }
    function startImage(){
        setInterval(() => {
            //Troca Imagem
            nextImage();
        }, time)
    }
    window.addEventListener("load", startImage)
</script>
</html>