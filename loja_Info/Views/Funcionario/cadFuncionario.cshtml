
@model loja_Info.Models.modelFuncionario

@{
    ViewBag.Title = "Cadastro de Funcionário";
    Layout = null;
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" />

}
<style>
    * {
        margin: 0;
        padding: 0;
        font-family: 'Poppins';
    }

    :root {
        --white: #F6F6F6;
        --back-first: #e9e9e9;
        --text: #333333;
        --buttonCad: #8146FE;
    }

    body {
        min-height: 100vh;
        background-color: var(--back-first);
        transition: 2s;
    }

    nav {
        margin: 4% 4%;
        z-index: 6000;
        position: fixed;
        width: 80px;
        height: 85%;
        border-radius: 50px;
        background: var(--white);
        transition: 0.5s;
        text-align: center;
    }

    ul {
        list-style: none;
    }

        ul .home, .log-out {
            margin: 2.5rem auto;
        }

    li img {
        width: 2.5rem;
        margin: 0.5rem auto;
        transition: 0.5s;
    }

    a li img:hover {
        width: 3rem;
        transition: ease-in-out 0.5s;
    }

    section {
        display: inline-flex;
        background-color: var(--white);
        width: 65%;
        height: 78vh;
        margin: 5% 16%;
        justify-content: center;
        border: solid 2px var(--text);
    }

        section h1 {
            font: bold 22pt Poppins;
            margin: 3% 17%;
            letter-spacing: 3px;
            color: var(--text);
        }

        section .campo {
            width: 25vw;
            padding: 15px;
            margin: 0.5em 1em;
        }

    .campo::placeholder {
        color: #707070;
        font: italic 14pt Poppins;
        margin: 10% auto;
        opacity: 50%;
    }

    .main {
        display: flex;
        margin: 1em;
    }

    section .buttonCad {
        cursor: pointer;
        width: 30%;
        padding: 10px;
        margin-left: 7%;
        border: none;
        font: bold 12pt Poppins;
        text-transform: uppercase;
        border-radius: 25px;
        background: var(--buttonCad);
        color: var(--white);
    }

    .footer {
        display: flex;
        margin: auto 0%;
        width: 110%;
    }

    .back {
        display: inline-flex;
    }
</style>
<nav>
    <ul>
        <a href="" title="Home"><li class="home"><img src="~/fonts/icons/home_icon.png" alt=""></li></a>
        @if (Session["tipoLogado1"] == null)
        {
            <a href="../Funcionario/cadFuncionario" title="Cadastrar Funcionário"><li><img src="~/fonts/icons/add-func_icon.png" alt=""></li></a>
        }
        <a href="../Funcionario/cadCliente" title="Cadastrar Cliente"><li><img src="~/fonts/icons/add-cliente_icon.png" alt=""></li></a>
        <a href="../Funcionario/cadProduto" title="Produtos"><li><img src="~/fonts/icons/cube_icon.png" alt=""></li></a>
        <a href="../Funcionario/Venda" title="Carrinho"><li><img src="~/fonts/icons/shopping-cart_icon.png" alt=""></li></a>
        <a href="../Login/Login" title="Sair"><li class="log-out"><img src="~/fonts/icons/log-out_icon.png" alt=""></li></a>
    </ul>
</nav>
<section>
    @using (Html.BeginForm("cadFuncionario", "Funcionario", FormMethod.Post))
{
    <h1>CADASTRO DE FUNCIONÁRIO</h1>
    <br />
    <main class="main">
        <main class="main_one">
            <div class="editor-field">
                @Html.EditorFor(m => m.NomeFunc, new { htmlAttributes = new { @class = "campo", @placeholder = "Nome do Funcionário" } })
            </div>

            <div class="editor-field">
                @Html.EditorFor(m => m.RgFunc, new { htmlAttributes = new { @class = "campo", @placeholder = "RG do Funcionário" } })
            </div>

            <div class="editor-field">
                @Html.EditorFor(m => m.CelFunc, new { htmlAttributes = new { @class = "campo", @placeholder = "Celular" } })
            </div>

        </main>
        <main class="main_two">
            <div class="editor-field">
                @Html.EditorFor(m => m.CargoFunc, new { htmlAttributes = new { @class = "campo", @placeholder = "Cargo" } })
            </div>

            <div class="editor-field">
                @Html.EditorFor(m => m.EndFunc, new { htmlAttributes = new { @class = "campo", @placeholder = "Endereço" } })
            </div>

            <div class="editor-field">
                @Html.EditorFor(m => m.TipoFunc, new { htmlAttributes = new { @class = "campo", @placeholder = "Tipo Funcionário Ex.(0 ou 1)" } })
            </div>
        </main>
    </main>

    <br />
    <div class="footer">
        @Html.ActionLink("Ver Lista de Funcionários", "listarFuncionario", new { @class = "back" })
        <input type="submit" value="Cadastrar" class="buttonCad" />
    </div>
}
    <br /><br />

</section>
