
@model loja_Info.Models.modelProduto

@{ ViewBag.Title = "editarProduto";
    Layout = null;
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" />
}
<style>
    * {
        margin: 0;
        padding: 0;
        font-family: 'Poppins';
    }

    :root {
        --white: #F6F6F6;
        --back-first: #e9e9e9;
        --text: #333333;
        --buttonEdit: #47CCFD;
    }

    body {
        min-height: 100vh;
        background-color: var(--back-first);
        transition: 2s;
    }

    nav {
        margin: 4% 4%;
        z-index: 6000;
        position: fixed;
        width: 80px;
        height: 85%;
        border-radius: 50px;
        background: var(--white);
        transition: 0.5s;
        text-align: center;
    }

    ul {
        list-style: none;
    }

        ul .home, .log-out {
            margin: 2.5rem auto;
        }

    li img {
        width: 2.5rem;
        margin: 0.5rem auto;
        transition: 0.5s;
    }

    a li img:hover {
        width: 3rem;
        transition: ease-in-out 0.5s;
    }

    section {
        display: inline-flex;
        background-color: var(--white);
        width: 65%;
        height: 78vh;
        margin: 5% 16%;
        justify-content: center;
        border: solid 2px var(--text);
    }

        section h1 {
            font: bold 22pt Poppins;
            margin: 5% 15%;
            width: 25rem;
            letter-spacing: 3px;
            color: var(--text);
        }

        section .campo {
            width: 25vw;
            padding: 10px;
            margin: 1em 2em;
        }

    .campo::placeholder {
        color: #707070;
        font: italic 14pt Poppins;
        margin: 10% auto;
        opacity: 50%;
    }

    .main {
        display: flex;
        margin: 1em;
    }

    section .buttonEdit {
        cursor: pointer;
        width: 35%;
        padding: 10px;
        margin-left: 30%;
        border: none;
        font: bold 12pt Poppins;
        text-transform: uppercase;
        border-radius: 25px;
        background: var(--buttonEdit);
        color: var(--white);
    }

    .footer {
        display: flex;
        margin: auto 0%;
        width: 110%;
    }

    .back {
        display: inline-flex;
    }
</style>
<nav>
    <ul>
        <a href="" title="Home"><li class="home"><img src="~/fonts/icons/home_icon.png" alt=""></li></a>
        @if (Session["tipoLogado1"] == null)
        {
            <a href="../Funcionario/cadFuncionario" title="Cadastrar Funcionário"><li><img src="~/fonts/icons/add-func_icon.png" alt=""></li></a>
        }
        <a href="../Funcionario/cadCliente" title="Cadastrar Cliente"><li><img src="~/fonts/icons/add-cliente_icon.png" alt=""></li></a>
        <a href="../Funcionario/cadProduto" title="Produtos"><li><img src="~/fonts/icons/cube_icon.png" alt=""></li></a>
        <a href="../Funcionario/Venda" title="Carrinho"><li><img src="~/fonts/icons/shopping-cart_icon.png" alt=""></li></a>
        <a href="../Login/Login" title="Sair"><li class="log-out"><img src="~/fonts/icons/log-out_icon.png" alt=""></li></a>
    </ul>
</nav>
<section>
    @using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1>EDITAR PRODUTO</h1>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.nome_Prod, new { htmlAttributes = new { @class = "campo" } })
                @Html.ValidationMessageFor(model => model.nome_Prod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.marca_Prod, new { htmlAttributes = new { @class = "campo" } })
                @Html.ValidationMessageFor(model => model.marca_Prod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.categoria_Prod, new { htmlAttributes = new { @class = "campo" } })
                @Html.ValidationMessageFor(model => model.categoria_Prod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.valor_Prod, new { htmlAttributes = new { @class = "campo" } })
                @Html.ValidationMessageFor(model => model.valor_Prod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.qtd_Prod, new { htmlAttributes = new { @class = "campo" } })
                @Html.ValidationMessageFor(model => model.qtd_Prod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="buttonEdit" />
            </div>
        </div>
    </div>}
</section>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
