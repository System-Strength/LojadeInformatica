@model IEnumerable<loja_Info.Models.modelCliente>

    @{
    ViewBag.Title = "Listar Cliente";
    Layout = null;
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" />
    }
    <style>
        * {
            margin: 0;
            padding: 0;
            font-family: 'Poppins';
        }

        :root {
            --white: #F6F6F6;
            --back-first: #333333;
            --text: #333333;
            --buttonCad: #8146FE;
            --textSecond-table: #8146FE;
        }

        body {
            display: inline-flex;
            min-height: 100vh;
            background-color: var(--back-first);
            transition: 2s;
        }

        nav {
            margin: 4% 4%;
            z-index: 6000;
            position: fixed;
            width: 80px;
            height: 85%;
            border-radius: 50px;
            background: var(--white);
            transition: 0.5s;
            text-align: center;
        }

        ul {
            list-style: none;
        }

            ul .home, .log-out {
                margin: 2.5rem auto;
            }

        li img {
            width: 2.5rem;
            margin: 0.5rem auto;
            transition: 0.5s;
        }

        a li img:hover {
            width: 3rem;
            transition: ease-in-out 0.5s;
        }

        section {
            background-color: var(--white);
            width: 95vw;
            height: 70vh;
            margin: 5% 16.6%;
            padding: 25px;
            border: solid 2px var(--text);
            justify-content: center;
        }

            section h1 {
                font: bold 22pt Poppins;
                margin: 3% 25%;
                width: 70%;
                letter-spacing: 3px;
                color: var(--text);
            }

        table {
            padding: 30px;
            background: #fff;
        }

        th {
            font: italic 14pt Poppins;
            border: solid 2px #333;
            color: var(--textSecond-table);
        }

        td {
            border: solid 2px #333;
            text-align: center;
        }
    </style>
    <nav>
        <ul>
            <a href="" title="Home"><li class="home"><img src="~/fonts/icons/home_icon.png" alt=""></li></a>
            @if (Session["tipoLogado1"] == null)
            {
                <a href="../Funcionario/cadFuncionario" title="Cadastrar Funcionário"><li><img src="~/fonts/icons/add-func_icon.png" alt=""></li></a>
            }
            <a href="../Funcionario/cadCliente" title="Cadastrar Cliente"><li><img src="~/fonts/icons/add-cliente_icon.png" alt=""></li></a>
            <a href="../Funcionario/cadProduto" title="Produtos"><li><img src="~/fonts/icons/cube_icon.png" alt=""></li></a>
            <a href="../Funcionario/Venda" title="Carrinho"><li><img src="~/fonts/icons/shopping-cart_icon.png" alt=""></li></a>
            <a href="../Login/Login" title="Sair"><li class="log-out"><img src="~/fonts/icons/log-out_icon.png" alt=""></li></a>
        </ul>
    </nav>
    <body>
        <section>
            <h1>CLIENTES CADASTRADOS</h1>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.cod_Cli)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.nome_Cli)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.email_Cli)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.endereco_Cli)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.cel_Cli)
                    </th>
                </tr>

                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.cod_Cli)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.nome_Cli)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.email_Cli)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.endereco_Cli)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.cel_Cli)
                    </td>
                </tr>
}
            </table>

        </section>
    </body>
