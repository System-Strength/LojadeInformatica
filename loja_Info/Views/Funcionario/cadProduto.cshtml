@model loja_Info.Models.modelProduto

@{

    ViewBag.Title = "Cadastrar Produto";
    Layout = null;
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" />

}
<style>
    * {
        margin: 0;
        padding: 0;
        font-family: 'Poppins';
    }

    :root {
        --white: #F6F6F6;
        --back-first: #e9e9e9;
        --text: #333333;
        --buttonCad: #8146FE;
    }

    body {
        min-height: 100vh;
        background-color: var(--back-first);
        transition: 2s;
    }

    nav {
        margin: 4% 4%;
        z-index: 6000;
        position: fixed;
        width: 80px;
        height: 85%;
        border-radius: 50px;
        background: var(--white);
        transition: 0.5s;
        text-align: center;
    }

    ul {
        list-style: none;
    }

        ul .home, .log-out {
            margin: 2.5rem auto;
        }

    li img {
        width: 2.5rem;
        margin: 0.5rem auto;
        transition: 0.5s;
    }

    a li img:hover {
        width: 3rem;
        transition: ease-in-out 0.5s;
    }

    section {
        display: inline-flex;
        background-color: var(--white);
        width: 52%;
        height: 78vh;
        margin: 5% 23%;
        justify-content: center;
        border: solid 2px var(--text);
    }

        section h1 {
            font: bold 22pt Poppins;
            margin: 3% auto;
            letter-spacing: 3px;
            color: var(--text);
        }

        section .campo {
            width: 25vw;
            padding: 15px;
            margin: 0.5em 1em;
        }

    .campo::placeholder {
        color: #707070;
        font: italic 15pt Poppins;
        margin: 10% auto;
        opacity: 50%;
    }

    section .buttonCad {
        cursor: pointer;
        width: 40%;
        padding: 10px;
        margin-left: 16%;
        border: none;
        font: bold 12pt Poppins;
        text-transform: uppercase;
        border-radius: 25px;
        background: var(--buttonCad);
        color: var(--white);
    }

    .footer {
        display: flex;
        justify-content: space-between;
        margin: auto -40%;
        width: 110%;
    }

    .back {
        display: inline-flex;
    }
</style>
<nav>
    <ul>
        <a href="" title="Home"><li class="home"><img src="~/fonts/icons/home_icon.png" alt=""></li></a>
        @if (Session["tipoLogado1"] == null)
        {
            <a href="../Funcionario/cadFuncionario" title="Cadastrar Funcionário"><li><img src="~/fonts/icons/add-func_icon.png" alt=""></li></a>
        }
        <a href="../Funcionario/cadCliente" title="Cadastrar Cliente"><li><img src="~/fonts/icons/add-cliente_icon.png" alt=""></li></a>
        <a href="../Funcionario/cadProduto" title="Produtos"><li><img src="~/fonts/icons/cube_icon.png" alt=""></li></a>
        <a href="../Funcionario/Venda" title="Carrinho"><li><img src="~/fonts/icons/shopping-cart_icon.png" alt=""></li></a>
        <a href="../Login/Login" title="Sair"><li class="log-out"><img src="~/fonts/icons/log-out_icon.png" alt=""></li></a>
    </ul>
</nav>
<section>
    @using (Html.BeginForm("cadProduto", "Funcionario", FormMethod.Post))
    {
    <h1>CADASTRAR PRODUTO</h1>

    <br />


    <div class="editor-field">
        @Html.EditorFor(m => m.nome_Prod, new { htmlAttributes = new { @class = "campo", @placeholder = "Nome" } })
    </div>

    <div class="editor-field">
        @Html.EditorFor(m => m.marca_Prod, new { htmlAttributes = new { @class = "campo", @placeholder = "Marca" } })
    </div>

    <div class="editor-field">
        @Html.EditorFor(m => m.categoria_Prod, new { htmlAttributes = new { @class = "campo", @placeholder = "Categoria" } })
    </div>

    <div class="editor-field">
        @Html.EditorFor(m => m.valor_Prod, new { htmlAttributes = new { @class = "campo", @placeholder = "Valor Unitário" } })
    </div>

    <div class="editor-field">
        @Html.EditorFor(m => m.qtd_Prod, new { htmlAttributes = new { @class = "campo", @placeholder = "Quantidade" } })
    </div>

    <br />
    <div class="footer">
        @Html.ActionLink("Ver Lista de Produtos", "listarProduto", new { @class = "back" })
        <input type="submit" value="Cadastrar" class="buttonCad" />
    </div>
}
    <br />
    <br />


</section>
