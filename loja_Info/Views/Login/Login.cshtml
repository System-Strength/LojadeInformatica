
@model loja_Info.Models.modelFuncionario

@ViewBag.msgLogar
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <fieldset>
        <br />
        <h2>Entrar</h2>
        <br />
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i style="font-size:20px;" class="fa fa-envelope"></i></span>

                @Html.EditorFor(x => x.RgFunc, new
           {
               htmlAttributes = new { id = "txtUsuario", senha = "txtUsuario", type = "text", @class = "form-control", placeholder = "Digite o usuário", required = "required", maxlength = "30" }
           })

                @Html.ValidationMessageFor(x => x.RgFunc, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i style="font-size:20px;" class="fa fa-lock"></i></span>

                @Html.EditorFor(x => x.SenhaFunc, new
           {
               htmlAttributes = new { id = "txtSenha", senha = "txtSenha", type = "password", @class = "form-control", placeholder = "Digite sua senha", required = "required", maxlength = "10" }
           })

                @Html.ValidationMessageFor(x => x.SenhaFunc, "", new { @class = "text-danger" })

            </div>
        </div>

        <input type="submit" class="button button-a button-big button-rouded" value="ENTRAR"><br />
        <br />

    </fieldset>
}